<Page x:Class="RA.Pages.AuthPAge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPAge">

    <Grid Margin="20" Background="Chocolate">
        <StackPanel >

            <TextBlock Text="Логин" Foreground="White"/>
            <TextBox x:Name="loginText"  />

            <TextBlock Text="Пароль" Foreground="White"/>
            <TextBox x:Name="txtPassword" />

            <Button Content="Войти" Click="Auth_Click" Margin="140,10,140,0" />

            <TextBlock Grid.Row="10" HorizontalAlignment="Center">
            <Run Text="Ещё нет аккаунта? " Foreground="White"/>
            <Hyperlink Name="RegisterLink" Click="RegisterLink_Click">Зарегистрируйтесь</Hyperlink>
            </TextBlock>
        </StackPanel>

    </Grid>
</Page>
